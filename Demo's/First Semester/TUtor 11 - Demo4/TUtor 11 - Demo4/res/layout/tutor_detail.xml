<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	
<TextView android:layout_width="wrap_content" android:background="#000000"
		android:layout_height="wrap_content" android:id="@+id/tvName" 
		android:layout_marginBottom="10px" android:textStyle="bold"
		android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
		
	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:padding="5dp">


			<TextView android:layout_height="wrap_content" android:text="Computer Science"
				android:id="@+id/tvMajor" android:layout_marginLeft="20px"
				android:layout_marginTop="40px" android:layout_width="wrap_content"
				android:layout_marginBottom="10px"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Rank"
				android:id="@+id/tvRank" android:layout_marginLeft="20px"
				android:layout_width="wrap_content" android:layout_marginBottom="20px"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Subject"
				android:id="@+id/tvSubject" android:textStyle="bold"
				android:layout_marginLeft="15px" android:layout_width="wrap_content"
				android:layout_marginBottom="15px"></TextView>

			<TextView android:layout_height="150px" android:text="Computer Science..."
				android:id="@+id/tvSubjectList" android:layout_marginLeft="20px"
				android:background="#999999" android:textColor="#000000"
				android:layout_marginBottom="20px" android:layout_width="match_parent"
				android:layout_marginRight="20px" android:layout_weight="0.01"></TextView>

			<TextView android:layout_height="wrap_content" android:text="General Times Available"
				android:id="@+id/tvTimes" android:textStyle="bold"
				android:layout_marginLeft="15px" android:layout_width="wrap_content"
				android:layout_marginBottom="15px"></TextView>

			<TextView android:layout_height="150px"
				android:text="Monday-Wednesday 12:30 - 3:00" android:id="@+id/tvTimesList"
				android:layout_marginLeft="20px" android:background="#999999"
				android:textColor="#000000" android:layout_marginBottom="20px"
				android:layout_marginRight="20px" android:layout_width="match_parent"
				android:layout_weight="0.02"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Email"
				android:id="@+id/tvEmailLabel" android:textStyle="bold"
				android:layout_marginLeft="15px" android:layout_marginBottom="5px" android:layout_width="match_parent"></TextView>

			<TextView android:layout_height="wrap_content" android:text="come@me.bro"
				android:id="@+id/tvEmail" android:layout_marginLeft="25px"
				android:layout_width="wrap_content" android:layout_marginBottom="15px"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Phone"
				android:id="@+id/tvPhoneLabel" android:textStyle="bold"
				android:layout_marginLeft="15px" android:layout_width="wrap_content"
				android:layout_marginBottom="5px"></TextView>

			<TextView android:layout_height="wrap_content" android:text="555-555-5555"
				android:id="@+id/tvPhone" android:layout_marginLeft="25px"
				android:layout_width="wrap_content" android:layout_marginBottom="15px"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Description"
				android:id="@+id/tvDescriptionLabel" android:textStyle="bold"
				android:layout_marginLeft="15px" android:layout_width="wrap_content"
				android:layout_marginBottom="15px"></TextView>

			<TextView android:layout_height="150px" android:text="I'm a super mega awesome tutor in every conceivable subject! Choose me!"
				android:id="@+id/tvDescription" android:layout_marginLeft="20px"
				android:layout_marginRight="20px" android:background="#999999"
				android:textColor="#000000" android:layout_marginBottom="20px"
				android:layout_width="match_parent" android:layout_weight="0.02"></TextView>


			<!-- <QuickContactBadge android:id="@+id/quickContactBadge1" -->
			<!-- style="?android:attr/quickContactBadgeStyleWindowLarge" -->
			<!-- android:layout_width="wrap_content" android:layout_height="wrap_content"></QuickContactBadge> -->

		<Button android:layout_height="wrap_content" android:id="@+id/button1"
				android:text="Call Tutor" android:layout_width="298dp" android:onClick="CallTutor"></Button>

			<Button android:layout_height="wrap_content" android:id="@+id/button2"
				android:text="Email Tutor" android:layout_width="298dp" android:onClick="Email"></Button>

			<FrameLayout android:id="@android:id/tabcontent"
				android:layout_width="fill_parent" android:padding="5dp"
				android:layout_height="wrap_content">
			</FrameLayout>
			<TabWidget android:tabStripEnabled="false"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:id="@android:id/tabs" android:layout_weight="0.05"></TabWidget>
		</LinearLayout>
	</ScrollView>
</TabHost>