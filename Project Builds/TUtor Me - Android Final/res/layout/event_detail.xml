<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:layout_width="fill_parent" android:background="#000000"
		android:layout_height="wrap_content"
		android:id="@+id/tvEventName"
		android:textStyle="bold"
		android:textAppearance="?android:attr/textAppearanceLarge"></TextView>

	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:textSize="15dp" >

			<TextView android:layout_height="wrap_content" android:text="Course Number"
				android:id="@+id/tvCourseLabel" android:textStyle="bold" android:layout_marginTop="50dp"
				android:layout_marginBottom="5dp" android:layout_width="match_parent"></TextView>
				
			<TextView android:layout_height="wrap_content"
				android:id="@+id/tvCourseNumber"
				android:layout_marginLeft="20dp"
				android:layout_width="wrap_content" android:layout_marginBottom="15dp"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Course Name"
				android:id="@+id/tvCourseNameLabel" android:textStyle="bold"
				android:layout_marginBottom="5dp" android:layout_width="match_parent"></TextView>
				
			<TextView android:layout_height="wrap_content"
				android:id="@+id/tvCourseName"
				android:layout_marginLeft="20dp" android:layout_width="wrap_content"
				android:layout_marginBottom="15dp"></TextView>
				
			<TextView android:layout_height="wrap_content" android:text="Course Major"
				android:id="@+id/tvCourseMajorLabel" android:textStyle="bold"
				android:layout_marginBottom="5dp" android:layout_width="match_parent"></TextView>
	
			<TextView android:layout_height="wrap_content"
				android:id="@+id/tvCourseMajor" android:layout_marginLeft="20dp"
				android:layout_width="wrap_content"
				android:layout_marginBottom="15dp"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Start"
				android:id="@+id/tvDateLabel" android:textStyle="bold"
				android:layout_marginBottom="5dp" android:layout_width="match_parent"></TextView>
				
			<TextView android:layout_height="wrap_content"
				android:id="@+id/tvDateStart" android:layout_marginLeft="20dp"
				android:layout_width="wrap_content"
				android:layout_marginBottom="15dp"></TextView>

			<TextView android:layout_height="wrap_content" android:text="End"
				android:id="@+id/tvTimeStartLabel" android:textStyle="bold"
				android:layout_marginBottom="5dp" android:layout_width="match_parent"></TextView>
				
			<TextView android:layout_height="wrap_content"
				android:id="@+id/tvDateEnd"
				android:layout_marginLeft="20dp" android:layout_width="wrap_content"
				android:layout_marginBottom="15dp"></TextView>

<!-- 			<TextView android:layout_height="wrap_content" android:text="Time" -->
<!-- 				android:id="@+id/tvTimeEndLabel" android:textStyle="bold" -->
<!-- 				android:layout_marginBottom="5dp" android:layout_width="match_parent"></TextView> -->
				
<!-- 			<TextView android:layout_height="wrap_content" -->
<!-- 				android:id="@+id/tvTimeEnd" -->
<!-- 				android:layout_marginLeft="20dp" android:layout_width="wrap_content" -->
<!-- 				android:layout_marginBottom="15dp"></TextView> -->
			
			<TextView android:layout_height="wrap_content" android:text="Location"
				android:id="@+id/tvLocationLabel" android:textStyle="bold"
				android:layout_marginBottom="5dp" android:layout_width="match_parent"></TextView>
				
			<TextView android:layout_height="wrap_content"
				android:id="@+id/tvLoc" android:layout_marginLeft="20dp"
				android:layout_width="wrap_content"
				android:layout_marginBottom="15dp"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Organizer"
				android:id="@+id/tvOrganizerLabel" android:textStyle="bold"
				android:layout_marginBottom="5dp" android:layout_width="match_parent"></TextView>
	
			<TextView android:layout_height="wrap_content"
				android:id="@+id/tvOrganizer" android:layout_marginLeft="15dp"
				android:layout_width="wrap_content"
				android:layout_marginBottom="20dp"></TextView>
				
			<TextView android:layout_height="wrap_content" android:text="Email"
				android:id="@+id/tvEmailLabel" android:textStyle="bold"
				android:layout_marginBottom="5dp" android:layout_width="match_parent"></TextView>

			<TextView android:layout_height="wrap_content"
				android:id="@+id/tvEmail" android:layout_marginLeft="20dp"
				android:layout_width="wrap_content" android:layout_marginBottom="15dp"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Phone"
				android:id="@+id/tvPhoneLabel" android:textStyle="bold"
				android:layout_width="wrap_content"
				android:layout_marginBottom="5dp"></TextView>

			<TextView android:layout_height="wrap_content"
				android:id="@+id/tvPhone" android:layout_marginLeft="20dp"
				android:layout_width="wrap_content" android:layout_marginBottom="15dp"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Description"
				android:id="@+id/tvDescriptionLabel" android:textStyle="bold"
				android:layout_width="wrap_content" android:layout_marginBottom="5dp"></TextView>

			<TextView android:id="@+id/tvDescription"
				android:layout_marginLeft="20dp"
				android:layout_width="match_parent"
				android:inputType="textMultiLine" android:layout_height="wrap_content"
				android:layout_marginBottom="15dp">
			</TextView>

			<CheckBox android:text="Attending" android:id="@+id/cbAttending"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_marginBottom="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></CheckBox>
			
			<TextView android:layout_height="wrap_content"
				android:id="@+id/tvAttending" android:layout_marginLeft="20dp"
				android:layout_width="wrap_content" android:layout_marginBottom="15dp"></TextView>
					
			<LinearLayout android:id="@+id/linearLayout1"
				android:layout_height="wrap_content" android:layout_width="match_parent"
				android:orientation="horizontal">

				<Button android:layout_height="wrap_content" android:id="@+id/event_detail_call"
				    android:onClick="CallTutor"
					android:text="Call Organizer" android:layout_width="match_parent"
					android:layout_weight="1" />
	
				<Button android:layout_height="wrap_content" android:id="@+id/event_detail_email"
				    android:onClick="Email"
					android:text="Email Organizer" android:layout_width="match_parent"
					android:layout_weight="1" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</TabHost>