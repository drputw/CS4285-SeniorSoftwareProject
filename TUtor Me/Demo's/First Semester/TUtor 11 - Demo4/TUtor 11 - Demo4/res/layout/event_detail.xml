<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:layout_width="wrap_content"
		android:background="#000000" android:layout_height="wrap_content"
		android:id="@+id/tvName" android:layout_marginBottom="10px"
		android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>



	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:padding="5dp">


			<TextView android:layout_height="wrap_content" android:text="Course"
				android:layout_marginTop="75px" android:id="@+id/tvCourse"
				android:textStyle="bold" android:layout_marginLeft="15px"
				android:layout_width="wrap_content" android:layout_marginBottom="15px"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Subject"
				android:id="@+id/tvSubject" android:textStyle="bold"
				android:layout_marginLeft="15px" android:layout_width="wrap_content"
				android:layout_marginBottom="15px"></TextView>

			<!-- <Spinner android:layout_width="150dp" android:id="@+id/sSubject" -->
			<!-- android:layout_height="40dp" android:layout_marginLeft="20px"></Spinner> -->



			<TextView android:layout_height="wrap_content" android:text="Organizer"
				android:id="@+id/tvOrganizer" android:layout_marginLeft="15px"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:layout_marginBottom="15px"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Date:"
				android:id="@+id/tvDate" android:layout_marginLeft="15px"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:layout_marginBottom="15px"></TextView>

			<!-- <DatePicker android:id="@+id/dpDate" android:scrollbars="none" android:clickable="false" -->
			<!-- android:layout_width="150dp" android:layout_height="50dp" -->
			<!-- android:layout_marginLeft="20px"></DatePicker> -->


			<TextView android:layout_height="wrap_content" android:text="Time"
				android:id="@+id/tvTime" android:textStyle="bold"
				android:layout_marginLeft="15px" android:layout_width="wrap_content"
				android:layout_marginBottom="15px"></TextView>

			<CheckBox android:text="Recurring Event " android:id="@+id/cbRecurring"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:editable="false" android:layout_marginBottom="15px"
				android:layout_marginLeft="15px" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></CheckBox>

			<TextView android:layout_height="wrap_content" android:text="Location: Beze Underground"
				android:id="@+id/tvLoc" android:layout_marginLeft="15px"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:layout_marginBottom="15px"></TextView>

			<!-- <TimePicker android:id="@+id/timePicker1" -->
			<!-- android:layout_width="wrap_content" android:layout_height="wrap_content" -->
			<!-- android:layout_marginLeft="20px"></TimePicker> -->

			<TextView android:layout_height="30dp" android:text="Email: come@me.bro"
				android:id="@+id/tvEmailLabel" android:textStyle="bold"
				android:layout_marginLeft="15px" android:layout_width="150dp"
				android:layout_marginBottom="5px"></TextView>

			<TextView android:layout_height="30dp" android:text="Phone: 555-5555"
				android:inputType="phone" android:id="@+id/tvPhoneLabel"
				android:textStyle="bold" android:layout_marginLeft="15px"
				android:layout_width="150dp" android:layout_marginBottom="5px"></TextView>

			<TextView android:layout_height="wrap_content" android:text="Description"
				android:id="@+id/tvDescriptionLabel" android:textStyle="bold"
				android:layout_marginLeft="15px" android:layout_width="wrap_content"
				android:layout_marginBottom="15px"></TextView>

			<TextView android:id="@+id/etDescription"
				android:text="Big exam coming up! Bring any notes you have or past homeworks we can study from."
				android:background="#999999" android:layout_marginLeft="20px"
				android:textColor="#FFFFFF" android:layout_width="match_parent"
				android:inputType="textMultiLine" android:layout_height="112dp"
				android:textSize="15px">
			</TextView>


			<!-- <QuickContactBadge android:id="@+id/quickContactBadge1" -->
			<!-- style="?android:attr/quickContactBadgeStyleWindowLarge" -->
			<!-- android:layout_width="wrap_content" android:layout_height="wrap_content"></QuickContactBadge> -->

			<Button android:text="7 Attending\nRSVP for this Event "
				android:id="@+id/btnRSVP" android:layout_gravity="center_vertical|center_horizontal|center"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>

			<Button android:layout_height="wrap_content" android:id="@+id/button1"
				android:text="Call Organizer" android:layout_width="298dp"
				android:onClick="CallTutor"></Button>

			<Button android:layout_height="wrap_content" android:id="@+id/button2"
				android:text="Email Organizer" android:layout_width="298dp"
				android:onClick="Email"></Button>

			<FrameLayout android:id="@android:id/tabcontent"
				android:layout_width="fill_parent" android:padding="5dp"
				android:layout_height="wrap_content">
			</FrameLayout>
			<TabWidget android:tabStripEnabled="true"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:id="@android:id/tabs" android:layout_weight="0.05"></TabWidget>
		</LinearLayout>
	</ScrollView>
</TabHost>